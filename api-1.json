{
  "openapi": "3.0.0",
  "info": {
    "title": "Diamond Betting API",
    "version": "1.0.0",
    "description": "API documentation for Diamond Betting API."
  },
  "components": {
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "query",
        "name": "key"
      }
    }
  },
  "security": [
    {
      "ApiKeyAuth": []
    }
  ],
  "tags": [
    {
      "name": "Sports",
      "description": "All sports-related endpoints."
    },
    {
      "name": "Casino",
      "description": "All casino-related endpoints."
    }
  ],
  "paths": {
    "/allSportid": {
      "get": {
        "tags": [
          "Sports"
        ],
        "summary": "All Sport IDs",
        "description": "On this endpoint you will get list of all the sport ID. which you can use to get the events of that sport.",
        "responses": {
          "200": {
            "description": "A list of all the sport ID."
          },
          "500": {
            "description": "something went wrong in api"
          }
        }
      }
    },
    "/esid": {
      "get": {
        "tags": [
          "Sports"
        ],
        "summary": "Match List",
        "description": "Get a list of all matches that are live and upcoming.",
        "parameters": [
          {
            "in": "query",
            "name": "sid",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "Sport ID of the match"
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully retrieved list of all matches live and upcoming"
          },
          "400": {
            "description": "Bad request - Invalid parameters"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/tree": {
      "get": {
        "tags": [
          "Sports"
        ],
        "summary": "All Sports Match List",
        "description": "Get a list of all matches that are live and upcoming matches of all the sports.",
        "responses": {
          "200": {
            "description": "Successfully retrieved list of all matches live and upcoming"
          },
          "400": {
            "description": "Bad request - Invalid parameters"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/getDetailsData": {
      "get": {
        "tags": [
          "Sports"
        ],
        "summary": "Match Details",
        "description": "Get detailed information for a specific match.",
        "parameters": [
          {
            "in": "query",
            "name": "gmid",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "Game match ID (gmid) of the match. Available from Match List endpoint."
          },
          {
            "in": "query",
            "name": "sid",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "Sport ID of the match"
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully retrieved match details"
          },
          "400": {
            "description": "Bad request - Invalid parameters"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/getPriveteData": {
      "get": {
        "tags": [
          "Sports"
        ],
        "summary": "Match Odds, Bookmaker and Fancy",
        "description": "Get Match Odds, Bookmaker, and Fancy data for a specific match.",
        "parameters": [
          {
            "in": "query",
            "name": "gmid",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "Game match ID (gmid) of the match. Available from Match List endpoint."
          },
          {
            "in": "query",
            "name": "sid",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "Sport ID of the match"
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully retrieved Match Odds, Bookmaker, and Fancy data"
          },
          "400": {
            "description": "Bad request - Invalid parameters"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/score": {
      "get": {
        "tags": [
          "Sports"
        ],
        "summary": "Score",
        "description": "On this endpoint you will get score of the event. You have to add score in the iframe tag in your website.",
        "parameters": [
          {
            "in": "query",
            "name": "gtv",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "Graphic ID (gtv) of the match. Available in Match Details endpoint."
          },
          {
            "in": "query",
            "name": "sid",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "Sport ID (sid) of the match."
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully retrieved match details"
          }
        }
      }
    },
    "/casino/tableid": {
      "get": {
        "tags": [
          "Casino"
        ],
        "summary": "Casino Table ID",
        "description": "On this endpoint you will get all ids of casino table. which you can to get data of it.",
        "responses": {
          "200": {
            "description": "A list of all the casino table ID."
          }
        }
      }
    },
    "/casino/data": {
      "get": {
        "tags": [
          "Casino"
        ],
        "summary": "Casino All Data",
        "description": "On this endpoint you will get all data of the casino game.",
        "parameters": [
          {
            "in": "query",
            "name": "type",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "Casino id which you have to get data from casino table id endpoint."
          }
        ],
        "responses": {
          "200": {
            "description": "All the data of casino game."
          }
        }
      }
    },
    "/casino/result": {
      "get": {
        "tags": [
          "Casino"
        ],
        "summary": "Casino Last Round Result",
        "description": "On this endpoint you will get last round result of the casino game.",
        "parameters": [
          {
            "in": "query",
            "name": "type",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "Casino id which you have to get data from casino table id endpoint."
          }
        ],
        "responses": {
          "200": {
            "description": "Result of the casino game."
          }
        }
      }
    },
    "/casino/detail_result": {
      "get": {
        "tags": [
          "Casino"
        ],
        "summary": "Casino Result",
        "description": "On this endpoint you will get result of the casino game.",
        "parameters": [
          {
            "in": "query",
            "name": "type",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "Casino id which you have to get data from casino table id endpoint."
          },
          {
            "in": "query",
            "name": "mid",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "Round id which you have to get data from Casino All Data endpoint."
          }
        ],
        "responses": {
          "200": {
            "description": "Result of the casino game."
          }
        }
      }
    },
    "/placed_bets": {
      "post": {
        "tags": [
          "Sports"
        ],
        "summary": "Save Placed Bets",
        "description": "Send the bets, which has been placed by user.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "event_id",
                  "event_name",
                  "market_id",
                  "market_name",
                  "market_type"
                ],
                "properties": {
                  "event_id": {
                    "type": "integer",
                    "example": 45554544
                  },
                  "event_name": {
                    "type": "string",
                    "example": "IND vs AUS"
                  },
                  "market_id": {
                    "type": "integer",
                    "example": 45554544
                  },
                  "market_name": {
                    "type": "string",
                    "example": "10 OVER RUNS AUS(IND vs AUS)ADV"
                  },
                  "market_type": {
                    "type": "string",
                    "example": "FANCY"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Bet will be declared soon."
          },
          "400": {
            "description": "Bad request - Invalid parameters"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/get-result": {
      "post": {
        "tags": [
          "Sports"
        ],
        "summary": "Get Result",
        "description": "On this endpoint you will get result on which a user has placed bets.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "event_id",
                  "market_id",
                  "event_name",
                  "market_name"
                ],
                "properties": {
                  "event_id": {
                    "type": "integer",
                    "example": 45554544
                  },
                  "event_name": {
                    "type": "string",
                    "example": "IND vs AUS"
                  },
                  "market_id": {
                    "type": "integer",
                    "example": 45554544
                  },
                  "market_name": {
                    "type": "string",
                    "example": "10 OVER RUNS AUS(IND vs AUS)ADV"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Result."
          },
          "400": {
            "description": "Bad request - Invalid parameters"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/get_placed_bets": {
      "get": {
        "tags": [
          "Sports"
        ],
        "summary": "All Result of Event",
        "description": "On this endpoint you will get all the result of the event.",
        "parameters": [
          {
            "in": "query",
            "name": "event_id",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "A list of all the sport ID."
          },
          "500": {
            "description": "something went wrong in api"
          }
        }
      }
    }
  },
